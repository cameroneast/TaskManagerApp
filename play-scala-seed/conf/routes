# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Login Endpoints
GET     /                           controllers.AuthController.loginEmpty()
POST    /userData                   controllers.AuthController.loginComplete()
GET     /register                   controllers.AuthController.registerEmpty()
GET     /person                     controllers.PeopleController.showTasks(userID: String)
POST    /person                     controllers.PeopleController.showTasks(userID: String)
GET     /manager                    controllers.PeopleController.showPeople(userID: String)
POST    /manager                    controllers.PeopleController.showPeople(userID: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)